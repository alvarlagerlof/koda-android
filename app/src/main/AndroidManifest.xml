<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alvarlagerlof.koda">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />

    <uses-permission android:name="android.permission.CAMERA"/>



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true">

        <activity
            android:name=".Main.MainAcitivty"
            android:label="@string/app_name"
            android:theme="@style/TransNav">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        // Editor
        <activity
            android:name=".Editor.EditorActivity"
            android:label="Editor"
            android:parentActivityName=".Main.MainAcitivty"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:configChanges="orientation|screenSize"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Main.MainAcitivty" />

        </activity>


        // Play
        <activity
            android:name=".Play.PlayActivity"
            android:parentActivityName=".Main.MainAcitivty"
            android:theme="@style/AppTheme"
            android:configChanges="orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Main.MainAcitivty" />
        </activity>

        // Fullscreen
        <activity
            android:name=".FullscreenPlay"
            android:parentActivityName=".Main.MainAcitivty"
            android:theme="@style/AppTheme"
            android:configChanges="orientation|screenSize"
            android:exported="true">

        </activity>


        // Comments
        <activity
            android:name=".Comments.CommentsActivity"
            android:parentActivityName=".Main.MainAcitivty"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize">
        </activity>


        // Profile
        <activity
            android:name=".Profile.ProfileActivity"
            android:parentActivityName=".Main.MainAcitivty"
            android:theme="@style/AppTheme"
            android:label="Profil"
            android:configChanges="orientation|screenSize">
        </activity>


        // Login
        <activity
            android:name=".Login.LoginActivity"
            android:parentActivityName=".Main.MainAcitivty"
            android:theme="@style/TransNav"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>

        // Forgot password
        <activity
            android:name=".Login.ForgotPasswordActivity"
            android:parentActivityName=".Main.MainAcitivty"
            android:theme="@style/TransNav"
            android:windowSoftInputMode="stateVisible"
            android:screenOrientation="portrait">
        </activity>


        // New account
        <activity
            android:name=".Login.NewAccountActivity"
            android:parentActivityName=".Main.MainAcitivty"
            android:theme="@style/TransNav"
            android:windowSoftInputMode="stateVisible"
            android:screenOrientation="portrait">
        </activity>

        // Settings
        <activity
            android:name=".Settings.SettingsActivity"
            android:parentActivityName=".Main.MainAcitivty"
            android:theme="@style/AppTheme"
            android:label="InstÃ¤llnigar"
            android:windowSoftInputMode="stateHidden">
        </activity>


        // QrViewer
        <activity
            android:name=".QrCodeShare.QrViewer"
            android:parentActivityName=".Main.MainAcitivty"
            android:theme="@style/TransNav"
            android:label="Din profil"
            android:configChanges="orientation|screenSize">
        </activity>


        // QrScanner
        <activity
            android:name=".QrCodeShare.QrScanner"
            android:parentActivityName=".Main.MainAcitivty"
            android:theme="@style/TransNav"
            android:label="Skanna Qr-kod">
        </activity>


    </application>

</manifest>